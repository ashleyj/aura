#!//usr/bin/env bash

BASE=$(cd "$(dirname "$0")/.."; pwd -P)
COMPILER_JAR="$BASE/lib/aura-dist-compiler.jar"
if [ -f "$COMPILER_JAR" ]; then
    export AURA_HOME="$BASE"
else
    if [ "x$AURA_DEV_ROOT" != 'x' ]; then
        COMPILER_JAR=$(ls "$AURA_DEV_ROOT"/../aura-dist/compiler/target/aura-dist-compiler*.jar | egrep -v 'javadoc|sources' 2> /dev/null)
    fi
fi
if [ ! -f "$COMPILER_JAR" ]; then
  echo "aura-dist-compiler.jar not found"
  exit 1
fi

[ "x$JVM_MX" == 'x' ] && JVM_MX="2g"

java -XX:+HeapDumpOnOutOfMemoryError -Xss1024k -Xmx$JVM_MX $JVM_OPTS -jar "$COMPILER_JAR" "$@"
